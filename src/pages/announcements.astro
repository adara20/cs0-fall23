---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const announcements = await getCollection('announcements');
announcements.sort((a, b) => {
  const da = a.data.date ? new Date(a.data.date).getTime() : 0;
  const db = b.data.date ? new Date(b.data.date).getTime() : 0;
  return db - da; // newest first
});

const rendered = await Promise.all(
  announcements.map(async (ann) => {
    const { Content } = await ann.render();
    return { ann, Content };
  })
);
---

<Layout title="Announcements">

  <div class="mb-8 pb-6 border-b border-slate-200">
    <h1 class="text-3xl font-bold tracking-tight text-slate-900 mb-2">Announcements</h1>
    <p class="text-slate-500">Course updates and important information.</p>
  </div>

  {rendered.length === 0 ? (
    <div class="text-center py-20 text-slate-400">
      <svg class="w-12 h-12 mx-auto mb-4 opacity-30" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
      </svg>
      <p class="text-sm">No announcements yet.</p>
    </div>
  ) : (
    <div class="space-y-4">
      {rendered.map(({ ann, Content }) => (
        <article class="bg-white rounded-xl border border-slate-200 shadow-sm p-6 hover:border-blue-200 transition-colors">
          <div class="flex items-start justify-between gap-4 mb-4">
            <div>
              {ann.data.week !== undefined && (
                <span class="inline-block mb-2 px-2 py-0.5 rounded-full text-xs font-medium bg-blue-50 text-blue-700 border border-blue-100">
                  Week {ann.data.week}
                </span>
              )}
              <h2 class="font-semibold text-slate-900 text-lg">{ann.data.title}</h2>
            </div>
            {ann.data.date && (
              <time class="text-xs text-slate-400 font-mono shrink-0 bg-slate-50 px-2.5 py-1 rounded-lg border border-slate-200">
                {new Date(ann.data.date).toLocaleDateString('en-US', {
                  month: 'short', day: 'numeric', year: 'numeric',
                })}
              </time>
            )}
          </div>
          <div class="prose prose-sm prose-slate max-w-none
            prose-a:text-blue-600 prose-a:no-underline hover:prose-a:underline
            prose-p:text-slate-600 prose-p:leading-relaxed">
            <Content />
          </div>
        </article>
      ))}
    </div>
  )}

</Layout>
